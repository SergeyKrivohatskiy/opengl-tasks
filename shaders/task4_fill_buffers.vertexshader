#version 330 core

layout(location = 0) in vec3 vertex_position_model_space;
layout(location = 1) in vec3 vertex_normal;

out vec3 normal_;
out vec3 modelspace_pos;
uniform mat4 proj_view_mat;

void main()
{
    gl_Position = proj_view_mat * vec4(vertex_position_model_space, 1.0);
    modelspace_pos = vertex_position_model_space;
    normal_ = vertex_normal;
}

