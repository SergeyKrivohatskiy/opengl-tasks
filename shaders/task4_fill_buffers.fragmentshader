#version 330 core

layout(location = 0) out vec3 base_color;
layout(location = 1) out vec3 normal;
layout(location = 2) out vec3 position;

in vec3 normal_;
in vec4 gl_FragCoord;
in vec3 modelspace_pos;

void main()
{
    base_color = vec3(0.2);
    normal = normal_;
    position = modelspace_pos;
}