#version 330 core

layout(location = 0) in vec3 vertex_position_modelspace;

out vec3 texture_position;

uniform mat4 view_proj_mat;

void main()
{

    vec4 tmp = view_proj_mat * vec4(vertex_position_modelspace, 1.0);
    gl_Position = tmp.xyzw;
    texture_position = vertex_position_modelspace;
}

